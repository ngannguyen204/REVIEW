<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F8FD"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_logo_login" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata"
        android:text="@string/title_login"
        android:textAlignment="center"
        android:textColor="#087189"
        android:textSize="48sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/alata"
        android:text="@string/title_login_user_name"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/bg_edittext_rect"
        android:backgroundTint="#DFEDF0"
        android:ems="10"
        android:fontFamily="@font/alata"
        android:hint="@string/title_login_user_name_hint"
        android:inputType="text"
        android:textAlignment="viewStart" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/alata"
        android:text="@string/title_login_password"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/bg_edittext_rect"
        android:backgroundTint="#E3F1F4"
        android:ems="10"
        android:fontFamily="@font/alata"
        android:hint="@string/title_login_password_hint"
        android:inputType="textPassword" />

    <CheckBox
        android:id="@+id/chkSaveLoginInfor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata"
        android:text="@string/title_save_login_infor"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cbRemember"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:onClick="do_login"
            android:text="@string/title_login_button_login"
            android:textSize="20sp"
            app:backgroundTint="@color/button_teal" />

        <ImageButton
            android:onClick="do_exit"
            android:id="@+id/btnExit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_button_rounded"
            android:backgroundTint="#87CEE6"
            app:srcCompat="@mipmap/ic_login_exit" />

    </LinearLayout>
</LinearLayout>